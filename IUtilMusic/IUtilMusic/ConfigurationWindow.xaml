        <CheckBox x:Name="cbNotifications" Content="Enable log notifications" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" IsChecked="True" Click="cbNotifications_Click" Height="16" Width="117"/>
